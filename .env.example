######### VidioAgent - Example environment variables #########
# Copy this file to `.env` and fill in values before running the app.

# App
PROJECT_NAME=VidioAgent
SECRET_KEY=change-me

# LLM / AI providers
# Provide either GROQ_API_KEY or OPENAI_API_KEY depending on your provider
GROQ_API_KEY=
OPENAI_API_KEY=

# ElevenLabs (text-to-speech + voice cloning)
ELEVENLABS_API_KEY=

# Replicate (video generation)
REPLICATE_API_TOKEN=

# Twilio (WhatsApp)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_NUMBER=+1234567890

# Database (optional - leave empty to use local SQLite dev DB)
DATABASE_URL=

# Celery broker and backend (defaults assume local Redis)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Frontend configuration
NEXT_PUBLIC_API_URL=http://localhost:8000

# Optional production base URL (used to build absolute media URLs)
BASE_URL=http://localhost:8000

###############################################################
